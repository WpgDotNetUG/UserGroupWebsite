<header>
    <div class="container">
        <section id="social" class="hidden-xs hidden-sm">
            <section class="slack title">
                <img src="~/Images/slack-monochrome-small.png" alt="Slack"/>
                <form action="/Home/Signup" method="POST" class="form-inline">
                    <div class="form-group">
                        <input name="email" class="form-control input-sm slack-button" type="email" placeholder="you@yourdomain.com" />
                        <button type="submit" class="btn btn-small">
                            <i class="icon-chevron-sign-right"></i>
                        </button>
                    </div>
                </form>

            </section>
            <a href="https://twitter.com/wpgnetug" target="_blank">
                <i class="icon-twitter"></i>
                Follow us on Twitter
            </a>
            <a href="https://www.facebook.com/winnipegdotnet" target="_blank">
                <i class="icon-facebook-sign"></i>
                Like us on Facebook
            </a>
            <a href="https://github.com/WpgDotNetUG/UserGroupWebsite" target="_blank">
                <i class="icon-github"></i>
                Fork me on GitHub
            </a>
        </section>
        <nav class="navbar">
            <a href="/" class="navbar-brand">
                <img src="~/Images/logo_2013.png" alt="WPG.NET UG Logo"/>
            </a>
            <section id="description" class="navbar-left hidden-xs hidden-sm">
                <div class="title">
                    Winnipeg Dot Net User Group
                </div>
                <div class="description">A user group full of lambdas, LINQ, MVC, ponies and rainbows!</div>
            </section>
            <section id="main-menu" class="navbar-right">
                <section id="menu">@MenuItems()</section>
            </section>
        </nav>
    </div>
    <div class="divider"></div>
</header>

@helper MenuItems(string className = "")
{
    var newsSelected = ViewBag.Menu == "News" ? "active" : null;
    <ul class="nav">
        <li>@Html.ActionLink(".home", "Index", "Home")</li>
        <li><a href="http://www.eventbrite.com/org/1699161450" target="_blank">.events</a></li>
        <li><a href="http://wpgdotnet.ideascale.com/" target="_blank">.topics</a></li>
        <!-- <li class="@newsSelected"><a href="/pagenews">.news</a></li> -->
        <li>@Html.ActionLink(".contact", "ContactUs", "Home")</li>
    </ul>
}
