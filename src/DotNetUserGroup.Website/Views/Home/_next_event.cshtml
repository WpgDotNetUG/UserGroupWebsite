                    <span class="image">
                        <i class="icon-calendar"></i>
                    </span>
                    <section class="calendar">
                        <div data-bind="text: fDate"></div>
                        <div data-bind="text: time"></div> 
                    </section>
                    <br/>
                    <span class="image">
                        <i class="icon-map-marker"></i>
                    </span>
                    <section class="venue">
                        <div data-bind="text: venue"></div>
                        <div data-bind="text: address"></div>
                    </section>
                </section>
