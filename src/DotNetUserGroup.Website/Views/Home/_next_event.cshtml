    <section id="next-event">
        <header>next.event</header>
        <section class="event content">
            <!-- ko if: loading -->
                Finding about next event...
                <i class="icon-spin icon-spinner"></i>
            <!-- /ko -->
            <!-- ko if: !loading() && eventPending -->
                Next event in progress, please stay tuned!
